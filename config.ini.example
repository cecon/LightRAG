# PostgreSQL Configuration (with Apache AGE for graph support)
# This replaces Neo4j for graph storage
[postgres]
host = localhost
port = 5432
user = your_username
password = your_password
database = your_database
# workspace = default
# Multi-tenant configuration (optional, can be set via environment variables or API headers)
# tenant_id = default
# project_id = default
max_connections = 12
vector_index_type = HNSW        # HNSW, IVFFLAT or VCHORDRQ
hnsw_m = 16
hnsw_ef = 64
ivfflat_lists = 100
vchordrq_build_options =
vchordrq_probes =
vchordrq_epsilon = 1.9

# Other storage backends
[mongodb]
uri = mongodb+srv://name:password@your-cluster-address
database = lightrag

[redis]
uri=redis://localhost:6379/1

[qdrant]
uri = http://localhost:16333

[memgraph]
uri = bolt://localhost:7687
